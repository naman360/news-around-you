<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="/css/style.css" />
    <link
      href="https://fonts.googleapis.com/css2?family=Source+Sans+Pro&display=swap"
      rel="stylesheet"
    />
    <title>News App</title>
  </head>
  <body>
    <header class="header">
      <div class="header__logo">News Around You</div>
      <div class="header__search">
        <form action="/" method="POST">
          <input
            type="text"
            name="search"
            placeholder="Search for News"
            required
          />
          <input type="submit" value="Search" />
        </form>
      </div>
    </header>
    <div class="wrapper">
      <div class="news">
        <% if (news!=null){ %> <% news.forEach(article=>{%>
        <a href="<%- article.url %> " target="_blank" class="news__card">
          <img src="<%- article.urlToImage %>" alt="" />
          <h2><%= article.title %></h2>
          <p><%= article.description %></p>
          <h5 class="published"><%- moment(article.publishedAt).format("Do MMM YYYY") %></h5>
        </a>
        <%})%> <% }else{ %>
        <h2>No News Found!!</h2>
        <% } %>
      </div>
    </div>
  </body>
</html>
